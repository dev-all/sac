
@{
    ViewBag.Title = "A-Genda";
}


<div id="calender"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><i   id="eventPrioridad" ></i> <span id="eventTitle"></span></h4>
            </div>
            <div class="modal-body">
                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Calendar CSS -->
<link href="~/Content/assets/plugins/calendar/dist/fullcalendar.min.css" rel="stylesheet" />
<link href="~/Content/assets/plugins/calendar/dist/fullcalendar.print.min.css" rel="stylesheet" media="print" />

