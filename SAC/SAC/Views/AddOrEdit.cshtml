@model SAC.Models.CajaChicaModelView

@{
    ViewBag.Title = "AddOrEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<SelectListItem> ListaPais = (List<SelectListItem>)ViewBag.Listapagina;

}



<h2>AddOrEdit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>CajaChicaModelView</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Concepto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Concepto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Concepto, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.GrupoCaja, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GrupoCaja, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GrupoCaja, "", new { @class = "text-danger" })
        </div>
    </div>



    <div style="margin-top:1em">
        @Html.LabelFor(p => p.GrupoCaja)
        @Html.DropDownList("id", ListaPais, null, new { @class = "form-control" })
        @Html.ValidationMessage("codigo", new { @class = "text-danger" })
    </div>






    <div class="form-actions mt-5">


        <div class="row" style="text-align:right">
            <p>
                <button type="submit" class="btn btn-success btn-sm"> <i class="fa fa-check"></i> Guardar</button>
                @Html.ActionLink("Cancelar", "Index", "Caja", htmlAttributes: new { @class = "btn btn-dark btn-sm" })
            </p>
        </div>


    </div>



</div>
}

<link href="~/Content/assets/css/materialadmin.css" rel="stylesheet" />


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

