@model SAC.Models.FacturaPagoViewModel

<style>
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        padding: 0.1em 1em;
    }

    .table td, .table th {
        padding: .25rem;
    }

    .dataTables_wrapper {
        padding-top: 0px;
    }

  /*  .dataTables_scrollHead {
        max-height: 30px;
    }*/

    .form-group {
        margin-bottom: 5px;
    }
</style>
<div class="table-responsive">
    
    <table id="TblChequesTerceros" class="table stylish-table" >
        <thead>
            <tr>               
                <th class="text-center"> Sel.</th>
                <th class="text-center"> Orden</th>
                <th class="text-center"> Número</th>
                <th class="text-center"> Descripcion</th>
                <th class="text-center"> Fecha</th>
                <th class="text-center"> Importe</th>
                <th class="text-center"> Moneda</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaChequesTerceros)
            {
            <tr>
                <td><input type="checkbox" class="checkChequeTercero" id=@item.Id value=@item.Importe></td>
                <td class="text-right">@Html.DisplayFor(modelItem => item.Id)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => item.NumeroCheque)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => item.Importe)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoMoneda.Descripcion)</td>
                @*<td>@Html.CheckBoxFor(modelItem => item.seleccionado, new { @class = "checkChequeTercero", @id = item.Id })</td>*@
            </tr>
            }
        </tbody>
        <tfoot>

        </tfoot>
    </table>
</div>
