                            <div class="row">
                                <div class="form-group col-xlg-3 col-lg-3 col-md-3">
                                    @Html.EditorFor(model => model.fechaInicio, new { htmlAttributes = new { placeholder = "Fecha de inicio:", @class = "mdate form-control", @type = "text", @required = "true" } })

                                </div>
                                <div class="form-group col-xlg-3 col-lg-3 col-md-3">
                                    @Html.EditorFor(model => model.horaInicio, new { htmlAttributes = new { placeholder = "Hora de inicio:", @class = "mtime form-control", @type = "text", @required = "true" } })

                                </div>
                                <div class="form-group col-xlg-3 col-lg-3 col-md-3">
