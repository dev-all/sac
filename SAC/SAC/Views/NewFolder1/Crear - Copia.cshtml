                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xlg-12 col-lg-12 col-md-12">
                                    <div class="form-group">
                                        @Html.TextAreaFor(model => model.obs, new { cols = "200", rows = "8", placeholder = "Ingrese las Observaciones ...", @class = "textarea_editor form-control" })

                                    </div>
                                </div>
                            </div>


                          <button type="submit" class="btn btn-success m-t-20"><i class="fa fa-envelope-o"></i> Guardar</button>
                            <a href="@Url.Action("Index", "Evento")" class="btn btn-inverse m-t-20"><i class="fa fa-times"></i> Cancelar </a>
                        </div>
                            </div>
                }
            </div>
        </div>
    </div>
</div>
