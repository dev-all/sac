@section Scripts{
    <!-- Date Picker Plugin JavaScript -->
    <script src="/Content/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script type="text/javascript">


        $(document).ready(function () {

            $('#FechaOperacion_').datepicker({
                // format: "dd/mm/yyyy",
                // language: 'es',
                autoclose: true,
                todayHighlight: true
            });
        });


        var SelectMode = document.getElementById("SelectModoPago");
        document.getElementById("idModoPago").value = SelectMode.value;

        SelectMode.onchange = function () {
            if (SelectMode.value == 2) {
                $("#filaMonto").css("display", "flex");
            }
            else {
                $("#filaMonto").css("display", "none");
                document.getElementById("txtMonto").value = "";
            }

            document.getElementById("idModoPago").value = SelectMode.value;
        }


        function PagarFinal() {
            $("#frmPagar").trigger("submit");
        }

        function CancelarPago() {
            $("#TblFacturasCuentaCorriente_Vista > tbody").empty();
            $("#frmCancelarPago").trigger("submit");
            $("#DivMediosPago").css("display", "none");
            $("#btnGenerarPago").css("display", "none");
            $("#LblTotalFactura").text("0");
            $("#LblTotalPago").text("0");
            $("#LblTotalSaldo").text("0");
        }

        function ValidarIngresoPago() {

            if ($("#ConceptoPago_").val() != '') {
                if ($("#montoTotal_").val() != '') {

                    if ($("#montoTotal_").val() != "0") {
                        return true;
                    }
                    else {
                        return false;
                    }
                }
                else {
                    return false;
                }
            }
            else {
                return false;
            }
        }

        function EjecutarPago() {
           // $("#frmCrearPago").trigger("submit");
            //var validacion = ValidarIngresoPago();
            //if (validacion == true) {
                $("#frmCrearPago").trigger("submit");
                $("#ConceptoPago_").val('');
                $("#nroRecibo_").val('');
                $("#montoEfectivo_").val('');
                $("#montoTarjetaSelec_").val('');
                $("#montoChequesSeleccionados").val('');
                $("#montoCuentaBancaria_").val('');
                $("#montoRetencion_").val('');
                $("#montoTotal_").val('');
                $("#idPresupuestos_").val(0);
                $("#btnGenerarPago").css("display", "block");
            //}
            //else {
            //    alert("Ingrese los datos para realizar el pago");
            //}
        }

        function SumarTotalPago() {
            var efectivo = parseFloat(document.getElementById("montoEfectivo_").value);
            if (isNaN(efectivo)) { efectivo = 0 }
            var Tarjeta = parseFloat(document.getElementById("montoTarjetaSelec_").value);
            if (isNaN(Tarjeta)) { Tarjeta = 0 }
            var Cheque = parseFloat(document.getElementById("montoChequesSeleccionados").value);
            if (isNaN(Cheque)) { Cheque = 0 }
