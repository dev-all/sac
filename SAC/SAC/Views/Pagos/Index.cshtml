@model SAC.Models.PagosFacturasModelView

@{
    ViewBag.Title = "Index";
}



<div class="row">
    <div class="col-xlg-12 col-lg-12 col-md-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Index", "Pagos", FormMethod.Post, new { @id = "frmBusqueda" }))
                {
                    <div class="row col-md-12 m-t-10">

                        <div class="col-md-6 text-right">
                            <div class="row">
                                <div class="col-md-3  text-left">
                                    @Html.Label("Proveedores", new { @class = "control-label form-control-sm" })
                                </div>
                                <div class="col-md-6 text-left">
                                    @Html.DropDownList("ProveedorSelec_", Model.ListaProveedores_, null, new { @class = "form-control form-control-sm" })
                                </div>
                                <div class="col-md-3 text-left">
                                    <button type="submit" value="Buscar" class="btn btn-secondary btn-sm">Buscar</button>
                                </div>

                            </div>
                        </div>

                        <div class="col-md-6 text-right">
                            <div class="row">
                                <div class="col-md-3"> @Html.Label("Fecha", new { @class = "control-label form-control-sm" })</div>
                                <div class="col-md-3"> @Html.TextBoxFor(p => p.FechaOperacion_, new { @class = "form-control form-control-sm" })</div>

                                <div class="col-md-3"> @Html.Label("Cotizacion", new { @class = "control-label form-control-sm" })</div>
                                <div class="col-md-3"> @Html.TextBoxFor(p => p.cotizacion_, new { @class = "form-control form-control-sm" })</div>

                            </div>
                        </div>

                    </div>

                    <div class="row  col-md-12 m-t-10">
                        <div class="col-md-6 text-left">
                            <div class="row">
                                <div class="col-md-3">@Html.Label("Moneda", new { @class = "control-label form-control-sm" })</div>
                                <div class="col-md-3"> @Html.DropDownList("idTipoMonedaSelec_", Model.ListaTipoMonedas_, null, new { @class = "form-control form-control-sm" })</div>
                                <div class="col-md-3"></div>
                            </div>
                        </div>
                    </div>

                }

                <br />
                @if (Model.ListaFacturasAPagar_ != null)
                {
                    <div class="row col-md-12 m-t-10">
                        <div class="col-md-6">

                            <h5>Cuenta Corriente</h5>
                            <div class="table-responsive">
                                <div id="divPagina" style="height:200px">

                                    @using (Ajax.BeginForm("AgregarFacturaPagar", "Pagos", null, new AjaxOptions
                                    {
                                        HttpMethod = "POST",
                                        //OnSuccess = "mostrar",
                                        UpdateTargetId = "divPagina1",
                                        InsertionMode = InsertionMode.Replace
                                    }, new { @id = "frmCargarFactura" }))
                                    {

                                        <table id="TblFacturasCuentaCorriente" class="table stylish-table">
                                            <thead>
                                                <tr>

                                                    <td class="text-center">Nro Factura</td>
                                                    <td class="text-center">Tipo Comprobante</td>
                                                    <td class="text-center">Fecha</td>
                                                    <td class="text-center">Total</td>
                                                    <td class="text-center">Parcial</td>
                                                    <td class="text-center">Saldo</td>
                                                    <td class="text-center">Cotizacion</td>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var item in Model.ListaFacturasAPagar_)
                                                {
                                                    @*<tr ondblclick="IraPagar(@item.Id)">*@
                                                    <tr ondblclick="Pagar(@item.Id, @item.Saldo, @item.NumeroFactura)">

                                                        @Html.Hidden("idFacturaSeleccionada")
                                                        @Html.Hidden("idModoPago")
                                                        @Html.Hidden("MontoPago")
                                                        @Html.Hidden("CotizacionActual")

                                                        @*<td class="text-center">@Html.DisplayFor(modelItem => item.ProveedorCodigo)</td>*@
                                                        <td>@Html.DisplayFor(modelItem => item.NumeroFactura)</td>
                                                        <td class="text-right">@Html.DisplayFor(modelItem => item.TipoComprobante.Denominacion)</td>
                                                        <td class="text-right">@Html.DisplayFor(modelItem => item.Fecha)</td>
                                                        <td class="text-right">@Html.DisplayFor(modelItem => item.Total)</td>
                                                        <td class="text-right">@Html.DisplayFor(modelItem => item.Parcial)</td>
                                                        <td class="text-center">@Html.DisplayFor(modelItem => item.Saldo)</td>
                                                        <td class="text-center">@Html.DisplayFor(modelItem => item.Cotizacion)</td>
                                                    </tr>

                                                }
                                            </tbody>
                                            <tfoot>

                                            </tfoot>
                                        </table>
                                    }
                                </div>
                            </div>



                        </div>
                        @* aca van las facturas a pagar *@
                        <div class="col-md-6">
                            <h5>Resumen de Pago</h5>
                            <div class="table-responsive">
                                <div id="divPagina1" style="height:200px">
                                    @Html.Partial("_TablaFacturasPagar", Model)
                                </div>

                            </div>
                        </div>
                    </div>
                }


                @if (Model.ListaFacturasAPagar_ != null)
                {



                    using (Ajax.BeginForm("AgregarPago", "Pagos", null, new AjaxOptions
                    {
                        HttpMethod = "POST",
                        //OnSuccess = "OkPago",
                        UpdateTargetId = "divPagina1",
                        InsertionMode = InsertionMode.Replace
                    }, new { @id = "frmCrearPago" }))
                    {

                        <div class="row col-md-12 m-t-10" id="DivMediosPago" style="display:none">
                            <div class="col-md-6">
                                <h5>Generar pago</h5>
                                <div class="row ">
                                    <div class="col-md-3  text-left"> @Html.Label("Concepto", new { @class = "control-label form-control-sm" }) </div>
                                    <div class="col-md-9"> @Html.TextBoxFor(p => p.ConceptoPago_, new { @class = "form-control form-control-sm" })</div>
                                </div>
                                <div class="row  m-t-5">
                                    <div class="col-md-3  text-left"> @Html.Label("Nro Recibo", new { @class = "control-label form-control-sm" }) </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(p => p.nroRecibo_, new { @class = "form-control form-control-sm" })
                                        @*@Html.ValidationMessageFor(p => p.nroRecibo_, "", new { @class = "text-danger" })*@
                                    </div>

                                    <div class="col-md-3  text-right"> @Html.Label("Efectivo", new { @class = "control-label form-control-sm" }) </div>
                                    <div class="col-md-3"> @Html.TextBoxFor(p => p.montoEfectivo_, new { @class = "form-control form-control-sm", @onkeyup = "SumarTotalPago()" })</div>
                                </div>
                                <div class="row  m-t-5">
                                    <div class="col-md-3"></div>
                                    <div class="col-md-3  text-right"> @Html.Label("Tarjeta", new { @class = "control-label form-control-sm" }) </div>
                                    <div class="col-md-3">@Html.DropDownList("idTarjetaSelec_", Model.ListaTarjetas_, null, new { @class = "form-control form-control-sm" }) </div>
                                    <div class="col-md-3">@Html.TextBoxFor(p => p.montoTarjetaSelec_, new { @class = "form-control form-control-sm", @onkeyup = "SumarTotalPago()" })</div>
                                </div>
                                <div class="row  m-t-5">
                                    <div class="col-md-6"></div>
                                    <div class="col-md-3  text-left">
                                        <input type="button" class="btn btn-secondary btn-sm" id="btnSelCheque" onclick="fnVerModalCheques();" value="Cheque">
                                    </div>
                                    <div class="col-md-3  text-left">
                                        @Html.EditorFor(p => p.montoChequesSeleccionados, new { htmlAttributes = new { @class = "form-control form-control-sm", @readonly = true } })
                                    </div>

                                </div>
                                <div class="row  m-t-5">
                                    <div class="col-md-3"></div>
                                    <div class="col-md-3  text-right"> @Html.Label("Cuenta Banco", new { @class = "control-label form-control-sm" }) </div>
                                    <div class="col-md-3">@Html.DropDownList("idCuentaBancariaSelec_", Model.ListaCuentasBancarias_, null, new { @class = "form-control form-control-sm" }) </div>
                                    <div class="col-md-3">@Html.TextBoxFor(p => p.montoCuentaBancaria_, new { @class = "form-control form-control-sm", @onkeyup = "SumarTotalPago()" })</div>
                                </div>
                                <div class="row  m-t-5">
                                    <div class="col-md-3  text-left"> @Html.Label("Presupuesto", new { @class = "control-label form-control-sm" }) </div>
                                    <div class="col-md-6">@Html.DropDownList("idPresupuestos_", Model.ListaPresupuestoActual_, null, new { @class = "form-control form-control-sm" }) </div>
                                </div>
                                <div class="row  m-t-5">
                                    <div class="col-md-6"></div>
                                    <div class="col-md-3  text-left">
                                        <input type="button" class="btn btn-secondary btn-sm" id="btnSelRetencion" onclick="fnVerModalRetencion();" value="Retención">
                                    </div>
                                    <div class="col-md-3  text-left">
                                        @Html.EditorFor(p => p.montoRetencion_, new { htmlAttributes = new { @class = "form-control form-control-sm", @readonly = true } })
                                    </div>
                                </div>

                                <div class="row  m-t-5">
                                    <div class="col-md-6"></div>
                                    <div class="col-md-3  text-right"> @Html.Label("Total", new { @class = "control-label form-control-sm" }) </div>
                                    <div class="col-md-3"> @Html.TextBoxFor(p => p.montoTotal_, new { @class = "form-control form-control-sm" })</div>
                                </div>
                                <div class="row  m-t-5">
                                    <div class="col-md-6"></div>
                                    <div class="col-md-3">
                                        <input type="button" class="btn btn-success btn-block btn-sm" id="btnSelPago" onclick="EjecutarPago()" value="Generar Pago">
                                        @*<input type="submit" value="pago" />*@
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h5>Resumen</h5>
                                <br />
                                <div class="row  m-t-40">
                                </div>
                                <div class="row  m-t-5">
                                    <div class="col-md-3"></div>
                                    <div class="col-md-3  text-left">
                                        <input type="button" class="btn btn-success btn-block btn-sm" style="display:none" id="btnGenerarPago" onclick="PagarFinal()" value="Pagar">
                                    </div>
                                    <div class="col-md-3">
                                        <input type="button" class="btn btn-danger btn-block btn-sm" id="btnCancelarPago" onclick="CancelarPago()" value="Cancelar">
                                    </div>
                                    <div class="col-md-3"></div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</div>

