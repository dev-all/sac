<div class="col-xlg-12 col-lg-12 col-md-12">
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()
       
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Default Tab</h4>
                <h6 class="card-subtitle">Use default tab with class <code>nav-tabs & tabcontent-border </code></h6>
              
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="#rol" role="tab"><span class="hidden-sm-up"><i class="ti-home"></i></span> <span class="hidden-xs-down">Roles</span></a> </li>
                    @*<li class="nav-item"> <a class="nav-link " data-toggle="tab" href="#menu" role="tab"><span class="hidden-sm-up"><i class="ti-email"></i></span> <span class="hidden-xs-down">Menú Principal</span></a> </li>
                    <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#accion" role="tab"><span class="hidden-sm-up"><i class="ti-user"></i></span> <span class="hidden-xs-down">Acciones</span></a> </li>*@
                    
                </ul>
                <!-- Tab panes -->
                <div class="tab-content tabcontent-border">

                    <div class="tab-pane active p-20" id="rol" role="tabpanel">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-10">
                                                <h4 class="card-title">Roles de Sistemas </h4>
                                            </div>
                                            <div class="col-md-2 pull-right">
                                                <button type="button" class="btn btn-secondary btn-sm " data-toggle="modal" data-target="#add-rol">
                                                    <i class="ti-menu"></i> Agregar Rol
                                                </button>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <h6 class="card-subtitle"> Permite agrupar funciones del sistema para asignar a un grupo de usuario </h6>

                                            </div>
                                        </div>
                                       
                                        <div class="table-responsive">
                                            <table id="tblMenusidebar" class="table stylish-table">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Rol
                                                        </th>

                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.IEaccion.Count() > 0)
                                                    {
                                                        foreach (var item in Model.IErol)
                                                        {
                                                            <tr>
                                                                <td>@Html.DisplayFor(modelItem => item.descripcion) </td>

                                                                <td>
                                                                    <a href="@Url.Action("MasEvento", "Rol",new { id = item.idRol })" class="btn btn-primary font-10" data-toggle="tooltip" data-original-title="Detalles">más </a>
                                                               
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td>
                                                                No se encontraron registros...
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                        <!--.modal- -->
                                        <div id="add-rolAccion" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="myModalLabel">Nueva Accion de Sistema </h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="floating-labels m-t-30">
                                                            <div class="form-group m-b-40">
                                                                @Html.EditorFor(model => model.rol.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                                                <span class="bar"></span>
                                                                <label for="accion_nombre">Nombre de Rol</label>
                                                            </div>
                                                            <div class="form-group m-b-30">
                                                                @Html.EditorFor(model => model.rol.idHome, new { htmlAttributes = new { @class = "form-control" } })
                                                                <span class="bar"></span>
                                                                <label for="acccion_controlador">Nombre del Controlador </label>
                                                                <span class="help-block"><small>EJ.: Evento para EventoController </small></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <input type="submit" value="Guardar" formaction="@Url.Action("CreateRol", "Configuracion")" class="btn btn-primary" />
                                                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</button>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <!-- /.modal- -->
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                  

                </div>
            </div>
        </div>
    }

</div>


                    
                    

