
@model SAC.Models.ConfiguracionModelView

@using (Html.BeginForm("CreateMenusidebar", "Configuracion", FormMethod.Post, new { @class = "floating-labels m-t-30", novalidate = true }))
{
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="myModalLabel">Nueva Opción de Menú </h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        </div>
        <div class="modal-body">



            <div class="form-group m-b-40">
                @Html.EditorFor(model => model.menuSideBar.Icono, new { htmlAttributes = new { @class = "form-control" } })
                <span class="bar"></span>
                <label for="inputIcono">Icono</label>
                <span class="help-block"><small><a href="https://fontawesome.com/v4.7.0/icons/" target="_blank"> Ref. Iconos</a>  </small></span>
            </div>
            <div class="form-group m-b-30">
                @Html.EditorFor(model => model.menuSideBar.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                <span class="bar"></span>
                <label for="inputTitulo">Titulo</label>
            </div>
            <div class="form-group m-b-30">
                @Html.DropDownListFor(model => model.menuSideBar.IdAccion, (IEnumerable<SelectListItem>)(ViewBag.ControladorAccion), "", new { @class = "form-control" })
                <label for="inputControlador">Seleccionar Controlador - Acción</label>
            </div>
        </div>
        <div class="modal-footer">
            @*<button type="submit" class="btn btn-info waves-effect" data-dismiss="modal">Guardar</button>*@
            <button type="submit" class="btn btn-success m-t-20" data-dismiss="modal"><i class="fa fa-envelope-o"></i> Guardar</button>
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
}
<!-- /.modal-content -->
