@model Agenda.Models.EventoModelView

@{
    ViewBag.Title = "Eliminar";
}

<h2>Evento - Eliminar</h2>

<h3>¿Estás seguro que quieres eliminar esto?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Tipo:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.tipo)
        </dd>
        <dt>
            Fecha / hora:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fechaInicio)
        </dd>

        <dt>
            Asisten:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.asisten)
        </dd>

        <dt>
            Enviado:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.enviado)
        </dd>
        <dt>
            Ubicacion:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ubicacion)
        </dd>
        <dt>
            Obs.:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.obs)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <button type="submit" class="btn btn-danger m-t-20"><i class="fa fa-trash-o"></i> Eliminar</button>
       
        <a href="@Url.Action("Index", "Evento")"  class="btn btn-inverse m-t-20"><i class="fa fa-times"></i> Cancelar </a>
    </div>
    }
</div>
