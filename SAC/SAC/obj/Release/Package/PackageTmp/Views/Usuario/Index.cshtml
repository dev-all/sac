@model IEnumerable<Agenda.Models.EventoModelView>

@{
    ViewBag.Title = "Eventos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- page css -->
<link href="/Content/assets/css/pages/inbox.css" rel="stylesheet">


<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->

<div>
    @if (TempData["sucesso"] != null)
    {
        @Html.Partial("_PartialMsgSucesso");
    }
    else if (TempData["erro"] != null)
    {
        @Html.Partial("_PartialMsgErro");
    }
</div>



<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Eventos</h3>
    </div>
    @*<div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item">Apps</li>
                <li class="breadcrumb-item active">mailbox</li>
            </ol>
        </div>*@

</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="row">

                <div class="col-xlg-12 col-lg-12 col-md-12">
                    <div class="card-body ">
                        <div class="btn-group m-b-10 m-r-10" role="group" aria-label="Button group with nested dropdown">
                            <a href="@Url.Action("Crear", "Evento")" class="btn btn-secondary font-18"><i class="mdi mdi-calendar-plus"></i> Nuevo Evento</a>

                        </div>
                    </div>

                    <div class="card-body p-t-0">
                        <div class="card b-all shadow-none">
                            <div class="inbox-center table-responsive">

                                <table class="table table-hover no-wrap">
                                    <thead>
                                        <tr>
                                            <th>
                                                Tipo
                                            </th>
                                            <th>
                                                Fecha de Inicio
                                            </th>
                                            <th>
                                                Fecha de Finalización
                                            </th>
                                            <th>
                                                Asisten
                                            </th>
                                            <th>
                                                Enviado
                                            </th>
                                            <th>
                                                Ubicacion
                                            </th>
                                            @*<th>
                                                    Obs.
                                                </th>*@
                                            <th>Accion</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.tipo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.fechaInicio)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.fechaFin)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.asisten)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.enviado)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ubicacion)
                                                </td>
                                                @*<td>
                                                        @Html.DisplayFor(modelItem => item.obs)
                                                    </td>*@
                                                <td>
                                                    <a href="@Url.Action("Details", "Evento",new { id = item.id })" data-toggle="tooltip" data-original-title="Detalles"> <i class="fa  fa-file text-inverse m-r-10"></i> </a>
                                                    <a href="@Url.Action("Edit", "Evento",new { id = item.id })" data-toggle="tooltip" data-original-title="Editar"> <i class="fa fa-pencil text-inverse m-r-10"></i> </a>
                                                    <a href="@Url.Action("Delete", "Evento" ,new { id = item.id })" data-toggle="tooltip" data-original-title="Eliminar "> <i class="fa fa-close text-danger"></i>  </a>

                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End PAge Content -->
<!-- ============================================================== -->

