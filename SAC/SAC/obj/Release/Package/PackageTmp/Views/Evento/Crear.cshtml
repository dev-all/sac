@model Agenda.Models.EventoModelView

@{
    ViewBag.Title = "Eventos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- page css -->
<link href="/Content/assets/css/pages/inbox.css" rel="stylesheet">

<!-- Page plugins css -->

<link href="/content/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" type="text/css" />

<link href="~/Content/assets/plugins/timepicker-plugin/jquery.timepicker.css" rel="stylesheet" />


<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Eventos</h3>
    </div>
</div>
<div>
    @if (TempData["erro"] != null)
    {
        @Html.Partial("_PartialMsgErro");
    }
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="row">
                @using (Html.BeginForm("Crear", "Evento", FormMethod.Post, new { @class = "form-horizontal form-material", novalidate = true }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-xlg-12 col-lg-12 col-md-12">
                        <div class="card-body">
                            <h3 class="card-title">Crear Evento</h3>

                            <div class="row " id="datepairExample">

                                <div class="form-group col-xlg-3 col-lg-3 col-md-3">
                                    <label>Fecha de inicio</label>
                                    @Html.EditorFor(model => model.fechaInicio, new { htmlAttributes = new { placeholder = "Fecha de inicio:", @class = "date start form-control", @type = "text" } })

                                </div>
                                <div class="form-group col-xlg-3 col-lg-3 col-md-3">
                                    <label>Hora de inicio</label>
                                    @Html.EditorFor(model => model.horaInicio, new { htmlAttributes = new { placeholder = "Hora de inicio:", @class = " time start  form-control", @type = "text" } })

                                </div>
                                <div class="form-group col-xlg-3 col-lg-3 col-md-3">
                                    <label>Fecha de finalización</label>
                                    @Html.EditorFor(model => model.fechaFin, new { htmlAttributes = new { placeholder = "fecha de finalización:", @class = "date end  form-control", @type = "text" } })

                                </div>
                                <div class="form-group col-xlg-3 col-lg-3 col-md-3">
                                    <label>Hora de finalización</label>
                                    @Html.EditorFor(model => model.horaFin, new { htmlAttributes = new { placeholder = "Hora de finalización:", @class = "time end  form-control", @type = "text" } })

                                </div>

                            </div>

                            <div class="row">
                                <div class="col-xlg-12 col-lg-12 col-md-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.asisten, new { htmlAttributes = new { placeholder = "Asisten:", @class = "form-control", @type = "text", @required = "true" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xlg-12 col-lg-12 col-md-12">

                                    <div class="form-group">
                                        @Html.EditorFor(model => model.recibido, new { htmlAttributes = new { placeholder = "Recibido:", @class = "form-control", @type = "text", @required = "true" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xlg-12 col-lg-12 col-md-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.enviado, new { htmlAttributes = new { placeholder = "Enviado:", @class = "form-control", @type = "text" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xlg-12 col-lg-12 col-md-12">
                                    <div class="form-group">

                                        @Html.EditorFor(model => model.ubicacion, new { htmlAttributes = new { placeholder = "Ubicacion:", @class = "form-control", @type = "text" } })

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xlg-12 col-lg-12 col-md-12">
                                    <div class="form-group">

                                        @Html.EditorFor(model => model.tipo, new { htmlAttributes = new { placeholder = "Tipo:", @class = "form-control", @type = "text" } })

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xlg-12 col-lg-12 col-md-12">
                                    <div class="form-group">
                                        @Html.TextAreaFor(model => model.obs, new { cols = "200", rows = "8", placeholder = "Ingrese las Observaciones ...", @class = "textarea_editor form-control" })

                                    </div>
                                </div>
                            </div>


                            <button type="submit" class="btn btn-success m-t-20"><i class="fa fa-envelope-o"></i> Guardar</button>
                            <a href="@Url.Action("Index", "Evento")" class="btn btn-inverse m-t-20"><i class="fa fa-times"></i> Cancelar </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End PAge Content -->
<!-- ============================================================== -->


@section Scripts{

    <!-- ============================================================== -->
    <!-- Plugins for this page -->
    <!-- ============================================================== -->
    <!-- Plugin JavaScript -->
    <script src="~/content/assets/plugins/moment/moment.js"></script>
    <script src="~/content/assets/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js"></script>

    <!-- Date Picker Plugin JavaScript -->
    <script src="~/content/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/assets/plugins/bootstrap-datepicker/bootstrap-datetimepicker.es.js"></script>

    <!-- Date range Plugin JavaScript -->
    <script src="~/Content/assets/plugins/timepicker-plugin/jquery.timepicker.js"></script>
    <script src="~/Content/assets/plugins/timepicker-plugin/Datepair/datepair.js"></script>
    <script src="~/Content/assets/plugins/timepicker-plugin/Datepair/jquery.datepair.min.js"></script>
    <script>
        $(function () {
            //$("#.date").datepicker({
            //    dateFormat: 'dd/mm/yy',
            //    dayNames: ['Domingo', 'Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado'],
            //    dayNamesMin: ['D', 'S', 'T', 'Q', 'Q', 'S', 'S', 'D'],
            //    dayNamesShort: ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb', 'Dom'],
            //    monthNames: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'],
            //    monthNamesShort: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
            //    nextText: 'Próximo',
            //    prevText: 'Anterior'
            //});
   
            // initialize input widgets first
            $('#datepairExample .time').timepicker({
                'showDuration': true,
                'timeFormat': 'H:i'
            });

            $('#datepairExample .date').datepicker({
                format: "dd/mm/yyyy",
                language: "es",
                autoclose: true,
                todayBtn: true
            });

            // initialize datepair
            $('#datepairExample').datepair();

            $('.time').val(moment().format('HH:mm'));
            $('.date').val(moment().format('DD/MM/YYYY'));

        });
    </script>
}


