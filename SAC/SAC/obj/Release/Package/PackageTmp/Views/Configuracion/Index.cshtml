<div class="col-xlg-12 col-lg-12 col-md-12">
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()
       
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Default Tab</h4>
                <h6 class="card-subtitle">Use default tab with class <code>nav-tabs & tabcontent-border </code></h6>
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="#rol" role="tab"><span class="hidden-sm-up"><i class="ti-home"></i></span> <span class="hidden-xs-down">Roles</span></a> </li>
                    <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#accion" role="tab"><span class="hidden-sm-up"><i class="ti-user"></i></span> <span class="hidden-xs-down">Acciones</span></a> </li>
                    <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#menu" role="tab"><span class="hidden-sm-up"><i class="ti-email"></i></span> <span class="hidden-xs-down">Menú Principal</span></a> </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content tabcontent-border">

                    <div class="tab-pane active" id="rol" role="tabpanel">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        @*<button type="button" class="btn btn-secondary font-14 pull-right" data-toggle="modal" data-target="#add-rol">
                                            <i class="ti-menu"></i> Agregar Menú
                                        </button>*@

                                        <h4 class="card-title">Acciones del Sistema </h4>
                                        <h6 class="card-subtitle"> Se configuran todas las acciones disponibles del sistema, puede agregar ó eliminar los items </h6>
                                      
                                        <div class="table-responsive">
                                            <table id="tblMenusidebar" class="table stylish-table">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Rol
                                                        </th>
                                                       
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.IEaccion.Count() > 0)
                                                    {
                                                        foreach (var item in Model.IErol)
                                                        {
                                                            <tr>
                                                                <td>@Html.DisplayFor(modelItem => item.descripcion) </td> 
                                                                
                                                                <td>                                                                   
                                                                    <a href="@Url.Action("MasEvento", "Rol",new { id = item.idRol })" class="btn btn-primary font-10" data-toggle="tooltip" data-original-title="Detalles">más </a>
                                                                    @*<input type="submit" value="Eliminar" formaction="@Url.Action("DeleteAccion", "Configuracion", new { id = item.idRol })"
                                                                           class="btn btn-primary font-10" data-toggle="tooltip" data-original-title="Se eliminara el registro..." />*@
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td>
                                                                No se encontraron registros...
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                        <!--.modal- -->
                                        <div id="add-rolAccion" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="myModalLabel">Nueva Accion de Sistema </h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="floating-labels m-t-30">
                                                            <div class="form-group m-b-40">
                                                                @Html.EditorFor(model => model.rol.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                                                <span class="bar"></span>
                                                                <label for="accion_nombre">Nombre de Rol</label>
                                                            </div>
                                                            <div class="form-group m-b-30">
                                                                @Html.EditorFor(model => model.rol.idHome, new { htmlAttributes = new { @class = "form-control" } })
                                                                <span class="bar"></span>
                                                                <label for="acccion_controlador">Nombre del Controlador </label>
                                                                <span class="help-block"><small>EJ.: Evento para EventoController </small></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <input type="submit" value="Guardar" formaction="@Url.Action("CreateRol", "Configuracion")" class="btn btn-primary" />
                                                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</button>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <!-- /.modal- -->
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>




                    <div class="tab-pane  p-20" id="accion" role="tabpanel">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <button type="button" class="btn btn-secondary font-14 pull-right" data-toggle="modal" data-target="#add-accion">
                                            <i class="ti-menu"></i> Agregar Menú
                                        </button>

                                        <h4 class="card-title">Acciones del Sistema </h4>
                                        <h6 class="card-subtitle"> Se configuran todas las acciones disponibles del sistema, puede agregar ó eliminar los items </h6>

                                        <div class="table-responsive">
                                            <table id="tblMenusidebar" class="table stylish-table">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Controlador
                                                        </th>
                                                        <th>
                                                            Acción
                                                        </th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.IEaccion.Count() > 0)
                                                    {
                                                        foreach (var item in Model.IEaccion)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.controlador)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.nombre)
                                                                </td>

                                                                <td>
                                                                    <input type="submit" value="Eliminar" formaction="@Url.Action("DeleteAccion", "Configuracion", new { id = item.idAccion })" class="btn btn-primary font-10" data-toggle="tooltip" data-original-title="Se eliminara el registro..." />
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td>
                                                                No se encontraron registros...
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                        <!--.modal- -->
                                        <div id="add-accion" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="myModalLabel">Nueva Accion de Sistema </h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="floating-labels m-t-30">
                                                            <div class="form-group m-b-40">
                                                                @Html.EditorFor(model => model.accion.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                                                <span class="bar"></span>
                                                                <label for="accion_nombre">Nombre de Acción</label>
                                                            </div>
                                                            <div class="form-group m-b-30">
                                                                @Html.EditorFor(model => model.accion.controlador, new { htmlAttributes = new { @class = "form-control" } })
                                                                <span class="bar"></span>
                                                                <label for="acccion_controlador">Nombre del Controlador </label>
                                                                <span class="help-block"><small>EJ.: Evento para EventoController </small></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <input type="submit" value="Guardar" formaction="@Url.Action("CreateAccion", "Configuracion")" class="btn btn-primary" />
                                                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</button>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <!-- /.modal- -->
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>


                    <div class="tab-pane p-20" id="menu" role="tabpanel">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <button type="button"class="btn btn-secondary btn-sm pull-right" data-toggle="modal" data-target="#add-menu">
                                            <i class="ti-menu"></i> Agregar Menú
                                        </button>
                                      

                                        <h4 class="card-title">Menú Principal </h4>
                                        <h6 class="card-subtitle"> Se configuran las opciones del Menú Principal, puede agregar ó eliminar los items </h6>
                                        <div class="table-responsive">
                                            <table id="tblMenusidebar" class="table stylish-table">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Icono
                                                        </th>
                                                        <th>
                                                            Titulo
                                                        </th>
                                                        <th>
                                                            Activo
                                                        </th>
                                                        <th>
                                                            Accion
                                                        </th>
                                                        <th>
                                                            Controlador
                                                        </th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.IEmenusidebar.Count() > 0)
                                                    {
                                                        foreach (var item in Model.IEmenusidebar)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Icono)
                                                                </td>

                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Titulo)
                                                                </td>

                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Activo)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Accion.nombre)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Accion.controlador)
                                                                </td>
                                                                <td>
                                                                    <input type="submit" value="Eliminar" formaction="@Url.Action("DeleteMenusidebar", "Configuracion", new { id = item.IdMenuSidebar })" class="btn btn-primary font-10" data-toggle="tooltip" data-original-title="Se eliminara el registro..." />
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td>
                                                                No se encontraron registros...
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                        <!--.modal- -->
                                        <div id="add-menu" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="myModalLabel">Nueva Opción de Menú </h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="floating-labels m-t-30">
                                                            <div class="form-group m-b-40">
                                                                @Html.EditorFor(model => model.menuSideBar.Icono, new { htmlAttributes = new { @class = "form-control" } })
                                                                <span class="bar"></span>
                                                                <label for="inputIcono">Icono</label>
                                                                <span class="help-block"><small><a href="https://fontawesome.com/v4.7.0/icons/" target="_blank"> Ref. Iconos</a>  </small></span>
                                                            </div>
                                                            <div class="form-group m-b-30">
                                                                @Html.EditorFor(model => model.menuSideBar.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                                                                <span class="bar"></span>
                                                                <label for="inputTitulo">Titulo</label>
                                                            </div>
                                                            <div class="form-group m-b-30">
                                                                @Html.DropDownListFor(model => model.menuSideBar.IdAccion, (IEnumerable<SelectListItem>)(ViewBag.ControladorAccion), "", new { @class = "form-control" })
                                                                <label for="inputControlador">Seleccionar Controlador - Acción</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <input type="submit" value="Guardar" formaction="@Url.Action("CreateMenusidebar", "Configuracion")" class="btn btn-primary" />
                                                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</button>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <!-- /.modal- -->
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }

</div>


                    
                    

